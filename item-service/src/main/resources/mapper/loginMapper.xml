<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hello.itemservice.mapper.LoginMapper">

    <select id="loginChk" parameterType="String" resultType="map">
        SELECT    CASE    WHEN
                              EXISTS (
                                      SELECT	1
                                      FROM	    TEST
                                      WHERE	    ID	=	#{email}
                                      AND	    PWD	=	#{pwd}
                                     )
                          THEN	1
                          ELSE	0
                          END	AS	result;
    </select>

    <select id="getBoard" resultType="hello.itemservice.vo.BoardList">
        SELECT  *
        FROM    BOARD;
    </select>


